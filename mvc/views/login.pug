extends _base

block styles 
    link(rel='stylesheet' href='/css/signup.css')

block content 
    section.signup-header.navbar-container
        .container-fluid
            .container-fill
                include components/navbar
    section.signup-body
        .container-fluid 
            .container-fill 
                h3.mb-3 Log into UltiStats
                .form-container
                    form#login-form
                        label.form-label(for="email") E-mail
                        .input-group.mb-3
                            input#email.form-control(type="email" name="email" placeholder="E-Mail Address" required)
                        label.form-label(for="password") Password
                        .input-group.mb-3
                            input#password.form-control(type="password" name="password" placeholder="Password" required)
                        button.btn.btn-outline-success.hover-gray.mb-3
                            a(href="")
                                div Log in
                        h6.mb-3 Forgot your password? #[a(href="/forgotPassword") Reset it here].
                        h6.mb-3 Don't have an account? #[a(href="/signup") Sign up here].
block scripts 
    script(src="/js/login.js" type="module" defer)