extends _baseEmail

block content
    p Hello, #{name},
    each paragraph in text 
        p= paragraph
    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td(style="padding:10px;")
                                    a(href=`${url[0]}`, target='_blank') Accept
                                td(style="padding:10px;")
                                    a(href=`${url[1]}`, target='_blank') Decline
                                td(style="padding:10px;")
                                    a(href=`${url[2]}`, target='_blank') View Requests
    p Thank you, and good luck this season.
    p #[a(href="https://www.ultistats.app" target="_blank") UltiStats]
