#button-row-container(class=`display-${settings.nameDisplay}`)
hr.separator
.action-container.d-flex.align-items-center.justify-content-center.w-100
    button#stall.btn.btn-sm.btn-light.mx-1(type="button") Stall 
    button#drop.btn.btn-sm.btn-primary.mx-1(type="button") Drop 
    button#throwaway.btn.btn-sm.btn-secondary.mx-1(type="button") Throwaway 
    button#goal.btn.btn-sm.btn-success.mx-1(type="button") Goal 
hr.separator
.action-container.d-flex.align-items-center.justify-content-center.w-100
    .dropdown.dropup.mx-2
        a.btn.btn-sm.btn-warning.dropdown-toggle(role="button" data-bs-toggle="dropdown" aria-expanded="false") Events 
        ul.dropdown-menu 
            - if (gameData.format.allowPeriodEnd)
                li 
                    a#end-period.dropdown-item(role="button") End period
            li 
                button#sub.dropdown-item(role="button") Sub 
            li
                button#point-timeout-us.dropdown-item(role="button" disabled) Our Timeout 
            li 
                button#point-timeout-them.dropdown-item(role="button" disabled) Their Timeout 
    .dropdown.dropup.mx-2
        a.btn.btn-sm.btn-danger.dropdown-toggle(role="button" data-bs-toggle="dropdown" aria-expanded="false") Positioning 
        ul.dropdown-menu
            li
                a#brick.positioning.dropdown-item(role="button" data-x=`${gameData.format.brick + gameData.format.endzone}` data-y=`${gameData.format.width/2}`) Brick 
            li
                a#reverse-brick.positioning.dropdown-item(role="button" data-x=`${gameData.format.endzone/2}` data-y=`${gameData.format.width/2}`) Rev. brick 
            li
                a#attack-brick.positioning.dropdown-item(role="button" data-x=`${gameData.format.endzone + gameData.format.length - gameData.format.brick}` data-y=`${gameData.format.width/2}`) Attack brick 
            li
                a#own-goal.positioning.dropdown-item(role="button" data-x=`${gameData.format.endzone}`) Own GL 
            li 
                a#attack-goal.positioning.dropdown-item(role="button" data-x=`${gameData.format.length + gameData.format.endzone}`) Attack GL
            li
                a#center.positioning.dropdown-item(role="button" data-y=`${gameData.format.width/2}`) Center width
            li
                a#midfield.positioning.dropdown-item(role="button" data-x=`${gameData.format.endzone + gameData.format.length/2}` data-y=`${gameData.format.width/2}`) Midfield
hr.separator
.action-container.d-flex.align-items-center.justify-content-center.w-100
    button#settings.btn.btn-sm.btn-primary.mx-1(type="button" data-bs-toggle="modal" data-bs-target="#settings-modal") Settings
