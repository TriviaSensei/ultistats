extends _base

block styles 
    link(rel='stylesheet' href='/css/signup.css')

block content 
    section.navbar-container
        .container-fluid
            .container-fill
                include components/navbar
    section.signup-body
        .container-fluid 
            .container-fill 
                h6.mb-3 Already have an account? #[a(href="/login") Login here].
                h3.mb-3 Sign up for UltiStats
                .form-container
                    form#sign-up-form
                        label.form-label(for="first-name") First Name 
                        .input-group.mb-3
                            input#first-name.form-control(type="text" name="first-name" placeholder="First Name" required)
                            span.input-group-text.validator-span
                            .validator
                        label.form-label(for="last-name") Last Name
                        .input-group.mb-3
                            input#last-name.form-control(type="text" name="last-name" placeholder="Last Name" required)
                            span.input-group-text.validator-span
                            .validator
                        label.form-label(for="email") E-Mail address (will not be shared)
                        .input-group.mb-3
                            input#email.form-control(type="email" name="email" placeholder="E-Mail Address" required)
                            span.input-group-text.validator-span
                            .validator
                        label.form-label(for="password") Password
                        .input-group.mb-3
                            input#password.form-control(type="password" name="password" placeholder="Password" pattern=".{8,}" required)
                            span#pw-span.input-group-text.validator-span
                            .validator
                        label.form-label(for="password-confirm") Confirm Password
                        .input-group.mb-3 
                            input#password-confirm.form-control(type="password" name="password-confirm" placeholder="Confirm password" pattern=".{8,}" required)
                            span#pw-confirm-span.input-group-text.invalid-pw-confirm
                            .pw-confirm-validator.invalid
                        button.btn.btn-outline-success.hover-gray
                            a(href="")
                                div Sign up
block scripts 
    script(Src="/js/signup.js" type="module" defer)